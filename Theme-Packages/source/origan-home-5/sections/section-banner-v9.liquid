<div data-section-id="{{ section.id }}" data-section-type="section-banner-v9" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v9 "> 
    <div class="container container-full"> 
      <div class="row">
        <div class="col-banner-5">
          <div class="banner">
            <div class="img-banner box-img">
              <a href="{{section.settings.url_banner}}">
                {% if section.settings.img_banner != blank %}
                <img loading="lazy" width="" height="" data-src="{{section.settings.img_banner | image_url }}" class="lazyload img-fluid w-100" alt >
                {% else %}
                <img loading="lazy" width="" height="" data-src="//via.placeholder.com/630x457" class="lazyload img-fluid w-100" alt>
                {% endif %}
              </a>
            </div>
            <div class="banner-content">
              {% if section.settings.title_banner != blank %}
              <h3 class="title-banner" style="color: {{section.settings.color_title}}">{{section.settings.title_banner}}</h3>
              {% endif %}
              {% if section.settings.button_banner != blank %}
              <a href="{{section.settings.url_banner}}" class="button-shop button-shop-{{ section.id }}" title="">{{section.settings.button_banner}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-banner-2 text-center">
          <div class="banner">
            <div class="img-banner2 box-img">
              <a href="{{section.settings.url_banner2}}">
                {% if section.settings.img_banner2 != blank %}
                <img loading="lazy" width="" height="" data-src="{{section.settings.img_banner2 | image_url }}" class="lazyload img-fluid w-100" alt >
                {% else %}
                <img loading="lazy" width="" height="" data-src="//via.placeholder.com/450x457" class="lazyload img-fluid w-100" alt>
                {% endif %}
              </a>
            </div>
            <div class="banner-content banner-content2">
              {% if section.settings.title_banner2 != blank %}
              <h3 class="title-banner" style="color: {{section.settings.color_title}}">{{section.settings.title_banner2}}</h3>
              {% endif %}
              {% if section.settings.button_banner2 != blank %}
              <a href="{{section.settings.url_banner2}}" class="button-shop button-shop-{{ section.id }}" title="">{{section.settings.button_banner2}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-banner-5">
          <div class="banner">
            <div class="img-banner box-img">
              <a href="{{section.settings.url_banner3}}">
                {% if section.settings.img_banner3 != blank %}
                <img loading="lazy" width="" height="" data-src="{{section.settings.img_banner3 | image_url }}" class="lazyload img-fluid w-100" alt >
                {% else %}
                <img loading="lazy" width="" height="" data-src="//via.placeholder.com/630x457" class="lazyload img-fluid w-100" alt>
                {% endif %}
              </a>
            </div>
            <div class="banner-content">
              {% if section.settings.title_banner3 != blank %}
              <h3 class="title-banner" style="color: {{section.settings.color_title}}">{{section.settings.title_banner3}}</h3>
              {% endif %}
              {% if section.settings.button_banner3 != blank %}
              <a href="{{section.settings.url_banner3}}" class="button-shop button-shop-{{ section.id }}" title="">{{section.settings.button_banner3}}</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
    .section-banner-v9 .banner .button-shop-{{ section.id }} {
    color: {{section.settings.color_btn}};
  }
 .section-banner-v9 .banner .button-shop-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
  }
  .section-banner-v9 .banner .button-shop-{{ section.id }}:before {
    background: {{section.settings.color_btn}};
  }
 .section-banner-v9 .banner .button-shop-{{ section.id }}:hover:before {
    background: {{section.settings.color_btn_hover}};
  }
  
</style>
