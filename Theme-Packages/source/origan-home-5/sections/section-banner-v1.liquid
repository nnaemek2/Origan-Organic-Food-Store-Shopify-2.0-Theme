<div data-section-id="{{ section.id }}" data-section-type="section-banner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v1 ">
    <div class="container container-v2 {% if section.settings.ena_container %} container container-full {% endif %}">
      <div class="row">    
        <div class="col-lg-3 col-md-6 ">
          <div class=" banner ">
            <div class="banner-item"> 
              <div class="box-image d-block"> 
                {% if section.settings.banner_img1 != blank %}
                <img loading="lazy" width="" height="" data-src="{{ section.settings.banner_img1 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% else %}
                <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/700x700" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% endif %}
              </div>
              <div class="content">   
                  <a href="{{section.settings.url_button_banner1}}">
                    {% if section.settings.title_banner1 != blank %}
                    <h3 class="title-banner title-banner-{{ section.id }}">{{section.settings.title_banner1}}<i class="fa fa-long-arrow-right" aria-hidden="true"></i></h3>
                    {% endif %}
                  </a>
              </div>
            </div>
          </div>
        </div>    
        <div class="col-lg-3 col-md-6 ">
          <div class="banner ">
            <div class="banner-item">
              <div class="box-image d-block">
                {% if section.settings.banner_img2 != blank %}
