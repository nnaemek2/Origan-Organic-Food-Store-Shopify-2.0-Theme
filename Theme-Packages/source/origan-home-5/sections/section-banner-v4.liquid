<div data-section-id="{{ section.id }}" data-section-type="section-banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v4 "> 
    <div class="container container-v2">
      <div class="banner">
        <div class="img-banner">
          {% if section.settings.img_banner != blank %}
          <img loading="lazy" width="" height="" data-src="{{ section.settings.img_banner | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
          {% else %}
          <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/1660x350" class="lazyload img-fluid w-100" alt="_img_banner_">
          {% endif %}
        </div>
        <div class="content-banner">
          {% if section.settings.title_banner != blank %}
          <h3 class="title " style="color: {{section.settings.color_title}}" >{{section.settings.title_banner}}</h3>
          {% endif %}
          {% if section.settings.sub_banner != blank %}
          <p class="sub-title" style="color: {{section.settings.color_sub}}">{{section.settings.sub_banner}}</p>
          {% endif %}
          {% if section.settings.button1 != blank %}
          <a href="{{section.settings.url_button}}" class="button-shop button-shop-{{ section.id }} text-center">{{section.settings.button1}}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
   .section-banner-v4 .content-banner .button-shop-{{ section.id }} {
    color: {{section.settings.color_btn}};
    background: transparent;
    border: 2px solid {{section.settings.color_btn}};
  }
 .section-banner-v4 .content-banner .button-shop-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
    background: {{section.settings.bg_btn_hover}};
    border: 2px solid {{section.settings.bg_btn_hover}};
  }
</style>

