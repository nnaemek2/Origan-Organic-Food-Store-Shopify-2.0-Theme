<div data-section-id="{{ section.id }}" data-section-type="section-product-v8" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-product-v8 mt-all ">
    <div class="container container-v2">
      <div class="title-flex title_block">
        {% if section.settings.title_heading != blank %}
          <h3 class="title_product mb-0" style="color: {{section.settings.color_title}}">{{section.settings.title_heading}}</h3>
        {% endif %}
      </div>
      
      <div class="row js_section_product8 mt-50">   
        {% assign products_limit = section.settings.products_limit %}
        {% assign col = section.settings.select_collection %}
        {% for product in collections[col].products limit: products_limit %}
        <div class="col-md-6 col-12 product_item">
          {% include 'product-item-countdown' %}
        </div>
        {% else %}
        {% for i in (1..products_limit) %}
        <div class="col-md-6 col-12 product_item">
          {% include 'empty-product-item' %}
        </div>
        {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<style>
  .section-product-v8 .product-countdown .item-product-content {
    background: {{section.settings.bg_count}};
  }
  .section-product-v8 .product-countdown .content-countdown {
    background: {{section.settings.bg_count}};
  }
</style>
{% schema %}
{
  "name": "PRODUCT V8",
  "settings": [
    {
      "type": "header",
      "content": "Product 8"
    },
    {
      "type": "color",
      "id": "bg_count",
      "label": "Background Product",
      "default": "#f1f1f1"
    },
    {
      "type": "text",
      "id": "title_heading",
      "label": "Heading",
      "default": "DEALS OF THE DAY"
    },
    {
      "type": "color",
      "id": "color_title",
      "label": "Color",
      "default": "#000"
    },
    {
      "type": "header",
      "content": "Info Product"
    },
    {
      "type": "collection",
      "id": "select_collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Limit products",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 2
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "PRODUCT V8",
      "category": "HOME"
    }
  ]
}
{% endschema %}

