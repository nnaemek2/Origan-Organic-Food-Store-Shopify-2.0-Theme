<div data-section-id="{{ section.id }}" data-section-type="section-service-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-service-v1" style="background-image: url({% if section.settings.backgroud_image != blank %}{{section.settings.backgroud_image|img_url:'master'}}{% else %}//via.placeholder.com/1920x900{% endif %})">
    <div class="container container-v2">
      <div class="row js-services-v2">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "service" %}

        <div class="text-center itemtservice justify-content-center ">

          <div class="box-service col-lg-12">
            <div class="number ">
              {% if block.settings.img_icon != blank %}
              <img loading="lazy" width="" height="" src="{{ block.settings.img_icon | image_url }}">
              {% else %}
              {{ block.settings.block_number }}
              {% endif %}
            </div>

            <div class="info">
              {% if block.settings.block_title != blank %}
              <h4 class="title">{{block.settings.block_title}}</h4>
              {% endif %}
              {% if block.settings.block_content != blank %}            
              <p class="content">{{block.settings.block_content}}</p>
              {% endif %}
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>
<style>
  {% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
  {% if block.type == "service" %}

  }
  {% endif %}
  {% endfor %}
  {% endif %}
</style>
{% schema %}
{
    "name": "SERVICE V1",
    "class": "index-section",
    "settings": [

      {
        "type": "image_picker",
        "id": "backgroud_image",
        "label": "Backgroud Image",
        "info": "1920 x 670px recommended"
      },
      {
        "type": "header",
        "content": "Section Space"
      },
      {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service V1",
      "settings": [
        {
          "type": "text",
          "id": "block_number",
          "label": "Number",
          "default": "1"
        },
        {
          "type": "image_picker",
          "id": "img_icon",
          "label": "Image icon"
        },
        {
          "type": "text",
          "id": "block_title",
          "label": "Title",
          "default": " SHIPPING & RETURN"
        },
        {
          "type": "text",
          "id": "block_content",
          "label": "Content",
          "default": " If your glasses aren't perfect, return them within 30 days<br> for a full refund. We'll even pay shipping."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SERVICE V1",
      "category": "HOME",
      "blocks": [
        {
          "type": "service",
          "settings": {
            "block_number": "1",
            "block_title": " FREE SHIPPING",
            "block_content": "For all order over $99"
          }
        },
        {
          "type": "service",
          "settings": {
            "block_number": "2",
            "block_title": "DELIVERY ON TIME",
            "block_content": "Definition and measurement"
          }
        },
        {
          "type": "service",
          "settings": {
            "block_number": "3",
            "block_title": "SECURE PAMENT",
            "block_content": "100% secure payment"
          }
        }
      ]
    }
  ]
}
{% endschema %}


