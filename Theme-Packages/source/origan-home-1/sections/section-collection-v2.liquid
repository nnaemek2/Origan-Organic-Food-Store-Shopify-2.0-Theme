<div data-section-id="{{ section.id }}" data-section-type="section-collection-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
    <div class="section-collection-v2">
        <div class="container container-v2">
            {% for block in section.blocks %}
            {% if block.type == 'collection' %}
            {% assign mod = forloop.index | modulo : 2 %}
            {% if mod == 0 %}
            <div class="row align-items-center no-gutters"> 
                <div class="col-md-5 col-sm-12">
                    <a href="{{block.settings.block_url}}">
                        <img class="w-100" src="{% if block.settings.img_collection != blank %} {{block.settings.img_collection | img_url : 'master'}} {% else %}//via.placeholder.com/406x493{% endif %}">
                    </a>
                </div>
                <div class="col-md-7 col-sm-12">
                    <div class="{% if block.settings.select_position_content == 'left' %}text-left {% elsif block.settings.select_position_content == 'center' %}text-center {% else %}text-right {% endif %}col-info">
                        <h4 class="subtitle" style="color : {{block.settings.color_subtitle}}">
                            {{block.settings.block_subtitle}}
                        </h4>
                        <h3 class="title" style="color : {{block.settings.color_title}}">
                            {{block.settings.block_title}}
                        </h3>
                        <p class="des" style="color : {{block.settings.color_des}}">
                            {{block.settings.block_des}}
                        </p>
                        <a class="button-main1" href="{{block.settings.block_url}}">
                            {{block.settings.block_buton}}
                        </a>
                        
                    </div> 
                </div> 
            </div> 
            {% else %}
            <div class="row align-items-center no-gutters"> 
                <div class="col-md-5 col-sm-12 order-1 order-md-2">
                    <a href="{{block.settings.block_url}}">
                        <img class="w-100" src="{% if block.settings.img_collection != blank %} {{block.settings.img_collection | img_url : 'master'}} {% else %}//via.placeholder.com/406x493{% endif %}">
                    </a>
                </div>
                <div class="col-md-7 col-sm-12 order-2 order-md-1">
                    <div class="{% if block.settings.select_position_content == 'left' %}text-left {% elsif block.settings.select_position_content == 'center' %}text-center {% else %}text-right {% endif %}col-info">
                        <h4 class="subtitle" style="color : {{block.settings.color_subtitle}}">
                            {{block.settings.block_subtitle}}
                        </h4>
                        <h3 class="title" style="color : {{block.settings.color_title}}">
                            {{block.settings.block_title}}
                        </h3>
                        <p class="des" style="color : {{block.settings.color_des}}">
                            {{block.settings.block_des}}
                        </p>
                        <a class="button-main1" href="{{block.settings.block_url}}">
                            {{block.settings.block_buton}}
                        </a>
                    </div>
                </div>
            </div>
            {% endif %}
            {% endif %}
            {% endfor %}
            
            
        </div>
    </div>
</div>
{% schema %}
{
  "name": "COLLECTION V2",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "img_collection",
          "label": "Image Collection",
          "info": "406 x 493px recommended"
        },
        {
           "type": "header",
           "content": "Info"
        },
        {
          "type": "select",
          "id": "select_position_content",
          "label": "Choose The Position Content",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "text",
          "id": "block_subtitle",
          "label": "Sub Title",
          "default": "DESCRIPTION PRODUCTS"
        },
        {
           "type": "color",
           "id": "color_subtitle",
           "label": "Color Sub Title"
        },
        {
          "type": "text",
          "id": "block_title",
          "label": "Title",
          "default": "Details & Measurements"
        },
        {
           "type": "color",
           "id": "color_title",
           "label": "Color Title"
        },
        {
          "type": "textarea",
          "id": "block_des",
          "label": "Description",
          "default": "Function and form are everything in this classic tote, which is made with luxe leather and has no external branding. The bag has the perfect amount of structure to look smart all day long – it can stand on its own yet it's soft and comfortable to carry."
        },
        {
           "type": "color",
           "id": "color_des",
           "label": "Color Description"
        },
        {
          "type": "text",
          "id": "block_buton",
          "label": "Button View Collection",
          "default": "SHOP NOW"
        },
        {
          "type": "url",
          "id": "block_url",
          "label": "URL button",
          "default": "/collections/all"
        }      
      ]
    }
  ],

  "presets": [
    {
      "name": "COLLECTION V2",
        "category": "HOME",
