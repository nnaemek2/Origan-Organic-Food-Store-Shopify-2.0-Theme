<div data-section-id="{{ section.id }}" data-section-type="section-collection-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-collection-v1 ">
    <div class="container container-full">
      {% if section.settings.title_heading != blank %}
      <h3 class="title-heading text-center " style="color: {{section.settings.color_title_heading}}" >{{section.settings.title_heading}}</h3>
      {% endif %} 
      <div class="row js-collection-v1">    
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == 'colection' %} 
        <div class="col-12 p-0"> 
          <div class="banner-item ">
            <a href="{{block.settings.url_banner}}" class="box-img d-block position-relative">
              {% if block.settings.img_banner != blank %}
              <img data-src="{{block.settings.img_banner | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
              {% else %}
              <img data-src="//via.placeholder.com/600x947" class="lazyload img-fluid w-100" alt="_img">
              {% endif %}
            </a>
            <div class="content">
              {% if block.settings.title_banner != blank %}
              <a href="{{block.settings.url_banner}}" class="title-banner title-banner-{{ block.id }}">{{block.settings.title_banner}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %} 
      </div>
    </div>
  </div>
</div>

<style>
  {% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
  {% if block.type == 'colection' %}
  .section-collection-v1 .banner-item .content .title-banner-{{ block.id }} {
    color: {{block.settings.color_title}};
  }
  .section-collection-v1 .banner-item:hover .content .title-banner-{{ block.id }}{
    color: {{block.settings.color_title_hover}};
  }
  
  @media (max-width: 991px) {
    .section-collection-v1 .banner-item .content .title-banner-{{ block.id }} {
    color: {{block.settings.color_title_hover}};
    }
  }
        {% endif %}
        {% endfor %}
        {% endif %} 
</style>

{% schema %}
{
  "name": "COLLECTION V1",
  "max_blocks": 5,
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "colection",
      "name": "Collection Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "img_banner",
          "info": "420 x 400px recommended",
          "label": "Image  Banner"
        },
        {
          "type": "text",
          "id": "title_banner",
          "label": "Title Banner",
          "default": "Travel bags"
        },
        {
          "type": "color",
          "id": "color_title",
          "label": "Color Title",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "color_title_hover",
          "label": "Color Title Hover",
          "default": "#fff"
        },
        {
          "type": "url",
          "id": "url_banner",
          "label": "URL Banner",
          "default": "/collections/all"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "COLLECTION V1",
      "category": "HOME",
      "blocks": [
        {
          "type": "colection",
          "settings": {
            "title_banner": "Travel bags"
          }
        },
        {
          "type": "colection",
          "settings": {
            "title_banner": "Backpacks"
          }
        },
        {
          "type": "colection",
          "settings": {
            "title_banner": "Duffel bags"
          }
        },
        {
          "type": "colection",
          "settings": {
            "title_banner": "Crossbody bags"
          }
        }
      ]
    }
  ]
}
{% endschema %}

