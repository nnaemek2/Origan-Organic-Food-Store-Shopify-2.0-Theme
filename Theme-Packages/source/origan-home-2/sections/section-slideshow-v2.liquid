<div data-section-id="{{ section.id }}" data-section-type="section-slideshow-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-slideshow-v2">
    <div class="slick-side-h2 js-slideshow-v2">       
      {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
      {% if block.type == "slideshow" %}
      <div class="item-slide">
        <div class="img-slide">
          <div class="d-none d-md-block">
            <a href="{{block.settings.url_btn}}" class="d-block"> 
              <img data-src="{% if block.settings.img_slide != blank %} {{block.settings.img_slide | img_url : 'master'}} {% else %}  //via.placeholder.com/1920x900 {% endif %}" class="lazyload img_desktop img-fluid w-100" alt="_img_slide_">
            </a>
          </div>
          <div class="d-block d-md-none">
            <a href="{{block.settings.url_btn}}">
              {% if block.settings.img_slide_mb != blank %}
              <img data-src="{{block.settings.img_slide_mb | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img_slide">
              {% else %}
              <img data-src="{{block.settings.img_slide | img_url : 'master'}}" class="lazyload img_desktop img-fluid w-100" alt="_img_slide">
              {% endif %}
            </a>
          </div>
        </div>
        <div class="slide-content {% if block.settings.select_position_content == 'left' %} content-left {% elsif block.settings.select_position_content == 'right' %} content-right {% endif %}">

          {% if block.settings.sub_title != blank %}
          <div class="sub-title1 ">
            <p class="animated" style="color: {{block.settings.color_sub_title}}">{{block.settings.sub_title}}</p>
          </div>
          {% endif %}

          {%  if block.settings.title_slide != blank %}
          <div class="title-slide">
            <h3 class="animated" style="color: {{block.settings.color_title}}">{{block.settings.title_slide}}</h3>
          </div>
          {% endif %}

          {% if block.settings.desc_slide != blank %}
          <div class="desc-slide">
            <p class="animated" style="color: {{block.settings.color_desc_slide}}">{{block.settings.desc_slide}}</p>
          </div>
          {% endif %}

          {% if block.settings.btn_slide != blank %}
          <div class="box-btn">
            <a href="{{block.settings.url_btn}}" class="button-main1 animated btn-slide-{{ block.id }}">{{block.settings.btn_slide}}</a>
          </div>
          {% endif %}

        </div>
      </div>
      {% endif %}
      {% endfor %}
      {% endif %}
    </div>
  </div>
</div>
<style>
  {% for block in section.blocks %}
  {% if block.type == 'slideshow' %}
  .section-slideshow-v2 .slick-side-h2 .item-slide .box-btn .btn-slide-{{ block.id }} {
    background : {{block.settings.bg_color_block_button}};
    color : {{block.settings.color_block_button}};
  } 
  .section-slideshow-v2 .slick-side-h2 .item-slide .box-btn .btn-slide-{{ block.id }}:before {
    border-color: {{block.settings.bg_color_block_button}};
  }
  .section-slideshow-v2 .slick-side-h2 .item-slide  .box-btn .btn-slide-{{ block.id }}:hover {
    background : {{block.settings.bg_color_hover_button}};
    color : {{block.settings.color_hover_text}};
  }
  .section-slideshow-v2 .slick-side-h2 .item-slide .box-btn .btn-slide-{{ block.id }}:hover:before {
    border-color: {{block.settings.bg_color_hover_button}};
  }
  {% endif %}
  {% endfor %}
</style>

