<div data-section-id="{{ section.id }}" data-section-type="section-testimonial-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-testimonial-v2 mt-all">
    <div class="container container-v2">
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="testimonial-content" style="background: {{ section.settings.bg_testimonial }}">
            {% if section.settings.section_title != blank %}
              <div class="text-center">
                <h3 class="title_heading" style="color:{{section.settings.color_title}}">
                  {{section.settings.section_title}}
                </h3>
              </div>
            {% endif %}
            <div class="row js-testimonial-v2">
              {% if section.blocks.size > 0 %}
              {% for block in section.blocks %}
              {% if block.type == "testimonial" %}
              <div class="col-12">
                <div class="testimonial-inner">
                  <div class="avatar">
                    {% if block.settings.block_img != blank %}
                    <img width="88" height="88" src="{{block.settings.block_img|img_url:'master'}}" class="img-fluid" alt="testimonial">
                    {% else %}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                  <div class="testimonial-info">
                    <p class="text" style="color: {{block.settings.color_content}}">{{block.settings.block_content}}</p> 
                    <span class="engoc-star star-5"></span>
                  </div>
                  <div class="testimonial-author">
                    <div class="author-info">
                      <h3 class="mb-1" style="color: {{block.settings.color_name}}">{{block.settings.block_name}}</h3>
                      <p class="text-position" style="color: {{block.settings.color_des}}">{{block.settings.block_des}}</p>
                    </div>
                  </div>
                </div>
              </div>
              {% endif %}
              {% endfor %}
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="banner-image">
            <a href="{{section.settings.url_banner}}" class="box-img d-block">
              {% if section.settings.banner_img != blank %}
              <img data-src="{{section.settings.banner_img | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
              {% else %}
              <img data-src="//via.placeholder.com/800x637" class="lazyload img-fluid w-100" alt="_img">
              {% endif %}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

